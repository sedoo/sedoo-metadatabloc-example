    "private": true,
    "main": "src/lib/modules/index.js",
    "scripts": {
        "install:roll": " npm i && rm -rf ./node_modules/rollup-plugin-vue && npm i rollup-plugin-vue@5.1.4",
        "serve": "vue-cli-service serve src/demo/main.js",
        "docs:dev": "vuepress dev docs",
        "build": "vue-cli-service build",
        "deploy": " webpack  --config deploy.config.js --mode none && rm -rf ./dist",
        "build:module": "rm -rf ./modules  && rollup --config rollupBuildSingleComponent.config.js -f esm ",
